{
  "name": "Codespace to perform Kubernetes Deep Dive for Developers Labs",
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "customizations": {
    "vscode": {
        "settings": {
            "workbench.startupEditor": "readme", 
            // Open Markdown files in preview mode by default
            "workbench.editorAssociations": {
                "*.md": "vscode.markdown.preview.editor"
            }
        }
    } 
  },
  "postCreateCommand": "echo alias k=kubectl >> ~/.bash_aliases",
}

